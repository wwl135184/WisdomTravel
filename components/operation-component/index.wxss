@import "../../assets/iconfont/icon.wxss";

.operation-component {
	width: 100%;
	height: 0;
	background: rgba(255, 255, 255, 1);
	border-radius: 12rpx 12rpx 0 0;
	box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.2);
	position: fixed;
	left: 0;
	bottom: 0;
	z-index: 20;
}

.component-header {
	padding: 32rpx;
	overflow: hidden;
}

.component-header .header-title {
	float: left;
	font-size: 32rpx;
	color: #222;
	line-height: 44rpx;
	font-weight: bold;
}

.component-header .header-close {
	float: right;
	width: 44rpx;
	height: 44rpx;
	border-radius: 50%;
	background: #D3D3D3;
	text-align: center;
	position: relative;
}

.component-header .header-close icon {
	font-size: 28rpx;
	color: #fff;
	font-weight: bold;
	display: inline;
	position: absolute;
	top: -14rpx;
	left: 8rpx;
}

.map-set {
	padding: 0 32rpx;
}

.map-set .map-set-tab {
	width: 100%;
	display: flex;
	overflow: hidden;
	border: 1px solid #1E90FF;
	border-radius: 12rpx;
	margin-bottom: 16rpx;
}

.map-set .map-set-tab .tab-item {
	flex: 1;
	height: 48rpx;
	text-align: center;
	font-size: 24rpx;
	color: #222;
	line-height: 48rpx;
	box-sizing: border-box;
}

.map-set .map-set-tab .tab-item-one {
	border-right: 1px solid #1E90FF;
}

.traffic-set {
	padding: 16rpx 0 0 10rpx;
	border-top: 1px solid #D3D3D3;
	overflow: hidden;
}

.traffic-set .traffic-set-title {
	float: left;
	font-size: 28rpx;
	color: #353535;
	line-height: 48rpx;
}

.traffic-set .traffic-set-switch {
	float: right;
}

.white-bottom {
	width: 100%;
	height: 10rpx;
	background: #e5e5e5;
	margin-top: 16rpx;
}

.technical-support {
	text-align: center;
	font-size: 22rpx;
	color: #8d8d8d;
	line-height: 56rpx;
}




