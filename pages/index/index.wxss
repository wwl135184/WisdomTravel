/**index.wxss**/
.map_container{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.map {
	width: 100%;
	height: 100%;
	z-index: 1;
}

.map-info {
	width: 100%;
	height: 136rpx;
	background: rgba(245, 245, 245, 1);
	border-radius: 16rpx 16rpx 0 0;
	box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.2);
	position: fixed;
	left: 0;
	bottom: 0;
	z-index: 10;
}

.map-info .address-info-search {
	padding: 32rpx;
	overflow: hidden;
	padding-bottom: 0;
}

.map-info .address-info-search input {
	width: 630rpx;
	height: 72rpx;
	padding: 0 28rpx;
	background: #e5e5e5;
	font-size: 30rpx;
	border-radius: 16rpx;
	float: left;
}

.cancel-title {
	float: left;
	font-size: 30rpx;
	color: #1E90FF;
	line-height: 72rpx;
	margin-left: 24rpx;
}

.map-info .address-list-main {
	padding: 32rpx;
	padding-top: 0;
	height: 424rpx;
	overflow: auto;
	-webkit-overflow-scrolling: touch;
}

.map-info .address-list-main .address-list-item {
	width: 100%;
	border-bottom: 2rpx solid #e5e5e5;
	box-sizing: border-box;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	font-size: 30rpx;
	color: #222;
	line-height: 40rpx;
	padding: 32rpx 0;
}