/**index.wxss**/
.map_container{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.map {
	width: 100%;
	height: 100%;
}

.map-info {
	width: 100%;
	height: 400rpx;
	background: rgba(245, 245, 245, 1);
	border-radius: 16rpx 16rpx 0 0;
	box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.2);
	position: absolute;
	bottom: -408rpx;
	left: 0;
	z-index: 1;
}